<%- include('includes/head') %>
    <%- include('includes/nav') %>


        <div class="container">
            <div class="row">
                <div class="col-lg-2"></div>
                <div class="col-lg-8 my-3">
                    <h1 class="text-center">Para acessar</h1>
                    <p class="text-center lead">Faça login ou crie sua conta abaixo</p>

                    <%- include('includes/messages'); %>

                        <div class="row">




                            <div class="col-lg my-5">
                                <h4>Faça login</h4>
                                <p>Se você já possue conta, faça login abaixo.</p>
                                <form class="form-login" action="/login/login" method="POST">
                                    <input type="hidden" name="_csrf" value=<%=csrfToken %> >
                                    <div class="form-group">
                                        <label>Seu e-mail</label>
                                        <input type="email" class="form-control" name="email">
                                    </div>
                                    <div class="form-group">
                                        <label>Sua senha</label>
                                        <input type="password" class="form-control" name="password">
                                        <small id="emailHelp" class="form-text text-muted">Não compartilhe sua senha com
                                            ninguem.</small>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Entrar</button>
                                </form>
                            </div>


                            <div class="col-lg my-5">
                                <h4>Crie sua conta</h4>
                                <p>Se você ainda não possue uma conta, preencha o formulário abaixo.</p>
                                <form class="form-cadastro" action="/login/register" method="POST">
                                    <input type="hidden" name="_csrf" value=<%=csrfToken %> >
                                    <div class="form-group">
                                        <label>Seu e-mail</label>
                                        <input type="email" class="form-control" name="email">
                                    </div>
                                    <div class="form-group">
                                        <label>Sua senha</label>
                                        <input type="password" class="form-control" name="password">
                                        <small id="emailHelp" class="form-text text-muted">Não compartilhe sua senha com
                                            ninguem.</small>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Criar minha conta</button>
                                </form>
                            </div>




                        </div>

                </div>
                <div class="col-lg-2"></div>
            </div>
        </div>


        <%- include('includes/footer') %>